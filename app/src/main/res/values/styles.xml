<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">visible</item>
    </style>

    <!-- Custom attributes for ImageViewPlus -->
    <declare-styleable name="NetworkImageViewPlus">
        <attr name="imageType" format="enum">
            <enum name="banner" value="0"/>
            <enum name="regular" value="1"/>
        </attr>
        <attr name="imageSize" format="enum">
            <enum name="mini_player_thumbnail" value="0"/>
            <enum name="grid_item" value="1"/>
            <enum name="list_item_thumbnail" value="2"/>
            <enum name="player" value="3"/>
        </attr>
    </declare-styleable>

</resources>
